   <content>
      <SplitPane fx:id="ConfigurationPanel" dividerPositions="0.5" minHeight="788.0" minWidth="1000.0" orientation="VERTICAL" stylesheets="@MachineConfCSS.css">
        <items>
          <AnchorPane fx:id="MachineDetails" maxHeight="221.0" minHeight="200.0" minWidth="1000.0" nodeOrientation="LEFT_TO_RIGHT" prefHeight="221.0" prefWidth="1010.0" visible="false">
               <children>
                  <Label layoutX="437.0" layoutY="14.0" styleClass="currentCode-Label" stylesheets="@MachineConfCSS.css" text="Machine Details " />
                  <Label fx:id="amountOfRotorsLabel" layoutX="23.0" layoutY="57.0" styleClass="text-button" stylesheets="@MachineConfCSS.css" text="Amount of rotors in use out of the total amount of rotors : " />
                  <Label fx:id="NumberOfRotors" layoutX="488.0" layoutY="57.0" styleClass="text-button" text="Label" />
                  <Label fx:id="NumberOfReflectorsLabel" layoutX="23.0" layoutY="90.0" styleClass="text-button" text="Number of reflectors:" />
                  <Label fx:id="numberOfReflectors" layoutX="208.0" layoutY="90.0" styleClass="text-button" text="Label" />
                  <Label fx:id="CipheredInputsLabel" layoutX="23.0" layoutY="122.0" styleClass="text-button" text="The amount of inputs that have ciphered through the machine so far:" />
