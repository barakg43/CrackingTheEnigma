                  <Label fx:id="currentMachineLabel" layoutX="23.0" layoutY="186.0" styleClass="text-button" text="Current machine code:" />
                  <Label fx:id="CuurentMachineCode" layoutX="208.0" layoutY="186.0" styleClass="text-button" text="Label" />
               </children>
               <padding>
                  <Insets bottom="100.0" />
               </padding>
            </AnchorPane>
            <SplitPane fx:id="codeConfigurationSplitPane" dividerPositions="0.5" minHeight="600.0" minWidth="1010.0">
              <items>
                  <ScrollPane fitToHeight="true" fitToWidth="true">
                     <content>
                        <Pane fx:id="MachineCodePane" minHeight="615.0" minWidth="501.0">
                           <children>
                              <Label layoutX="14.0" layoutY="14.0" styleClass="currentCode-Label" text="Set initial machine code:" />
                              <Label fx:id="SelectRotorsLabel" layoutX="15.0" layoutY="57.0" styleClass="currentRotors-button" text="Select rotors:" />
