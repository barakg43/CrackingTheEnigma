                              <Label layoutX="15.0" layoutY="261.0" styleClass="currentReflector-button" text="Select reflector:" />
                              <ComboBox fx:id="SelectedReflectorComboBox" layoutX="161.0" layoutY="261.0" onAction="#SelecteReflectorActionListener" prefWidth="150.0" styleClass="list-cell" stylesheets="@../currentCodeController/CurrentCodeCSS.css" />
