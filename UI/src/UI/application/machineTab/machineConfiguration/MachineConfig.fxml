                                 <children>
                                    <Button fx:id="ResetAllFieldsButton" layoutX="344.0" layoutY="32.0" mnemonicParsing="false" onAction="#ResetAllFieldsButtonActionListener" styleClass="text-button" stylesheets="@MachineConfCSS.css" text="Reset all fields" />
                                    <Button fx:id="SetCodeConfButton" disable="true" layoutX="156.0" layoutY="32.0" minWidth="164.0" mnemonicParsing="false" onAction="#SetCodeConfActionListener" styleClass="text-button" text="Set Code configuration" />
                                    <Button fx:id="GetRandomButton" layoutY="32.0" minWidth="142.0" mnemonicParsing="false" onAction="#GetRandomButtonActionListener" styleClass="text-button" stylesheets="@MachineConfCSS.css" text="Get Random Code" />
                                 </children>
                              </Pane>
                              <Label layoutX="14.0" layoutY="192.0" styleClass="positions-text" text=" (without white spaces between them)" />
                              <Pane fx:id="selectedCodePane" layoutX="65.0" layoutY="527.0" prefHeight="51.0" prefWidth="279.0">
                                 <children>
                                    <fx:include fx:id="selectedCode" source="../../generalComponents/codeFormat/codeTemplate.fxml" />
                                 </children>
                              </Pane>
                              <TextField fx:id="selectedRotors" layoutX="265.0" layoutY="51.0" styleClass="currentRotors-button" />
                           </children>
                           <stylesheets>
                              <URL value="@../currentCodeController/CurrentCodeCSS.css" />
                              <URL value="@MachineConfCSS.css" />
                           </stylesheets>
                        </Pane>
                     </content>
                  </ScrollPane>
                <AnchorPane fx:id="CurrentCodeConfigurationPane" maxWidth="501.0" minHeight="526.0" minWidth="501.0" stylesheets="@../currentCodeController/CurrentCodeCSS.css" visible="false">
                     <children>
                        <fx:include fx:id="CurrentCodeComponent" source="../currentCodeController/CurrentCodeScheme.fxml" />
                        <Label layoutX="50.0" layoutY="14.0" styleClass="currentCode-Label" text="Current Machine Configuration" AnchorPane.leftAnchor="50.0">
                           <padding>
                              <Insets left="5.0" />
                           </padding>
                        </Label>
                     </children>
                  </AnchorPane>
              </items>
            </SplitPane>
        </items>
      </SplitPane>
   </content>
</ScrollPane>
